upstream upstream_verifier {
    server 127.0.0.1:{{ verifier_private_port }};
}

server {
    listen {{ verifier_public_port }};

    access_log /var/log/nginx/verifier.access.log main;
    error_log  /var/log/nginx/verifier.error.log;


    location / {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_redirect off;
        proxy_pass http://upstream_verifier;
    }
}
