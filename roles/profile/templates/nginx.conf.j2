upstream upstream_profile_server {
    server 127.0.0.1:{{ profile_private_port }};
}

server {
    listen {{ profile_public_port }};

    access_log /var/log/nginx/profile_server.access.log main;
    error_log  /var/log/nginx/profile_server.error.log;


    location / {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_redirect off;
        proxy_pass http://upstream_profile_server;
    }
}
