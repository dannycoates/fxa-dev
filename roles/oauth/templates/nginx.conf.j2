upstream upstream_oauth_server {
    server 127.0.0.1:{{ oauth_private_port }};
}

server {
    listen {{ oauth_public_port }};

    access_log /var/log/nginx/oauth_server.access.log main;
    error_log  /var/log/nginx/oauth_server.error.log;


    location / {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_redirect off;
        proxy_pass http://upstream_oauth_server;
    }
}
